<% page_title "Administration / Email Messages" %>
<% @toolbar_title = "Email Messages" %>

<table class="data">
  <thead>
    <tr>
      <th class="first">To</th>
      <th class="subject" style="width: 48%;">Subject</th>
      <th class="delivered" style="width: 20%;">Delivered</th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message|%>
      <tr>
        <td class="first"><%= link_to h(truncate(message.recipients)), [:cms, message] %></td>
        <td><%= link_to h(truncate(message.subject)), [:cms, message] %></td>
        <td style="white-space: nowrap"><%=h time_on_date(message.delivered_at) %></td>
      </tr>
    <% end %>
    <% if @messages.empty? %>
      <tr>
        <td colspan="3" style="line-height: 30px; letter-spacing: 1px;">No email messages.</td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @messages.total_pages > 1 %>
  <%= render_pagination @messages, :email_messages %>
<% end %>
